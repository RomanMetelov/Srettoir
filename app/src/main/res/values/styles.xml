<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="TextView.FolderTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">black</item>
    </style>

    <style name="TextView.FileTitle">
        <item name="android:textSize">10sp</item>
        <item name="android:color">@color/grey_text</item>
    </style>

    <style name="TextView.SectionTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">black</item>
    </style>

    <style name="TextView.ClickableText">
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/purple_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button">
        <item name="android:background">@color/grey_background</item>
    </style>

